{
  "name": "sap-leonardo-iot-sdk",
  "private": true,
  "version": "0.1.6",
  "description": "SDK which simplifies the interaction between an client / server application and SAP IoT.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ignore-path .gitignore .",
    "test": "mocha test/unit --recursive",
    "coverage": "nyc --reporter=lcov --reporter=text-summary npm test",
    "test-integration": "cross-env DEBUG=LeonardoIoT nyc --reporter=lcov mocha test/integration --sort --bail --config ./test/integration/.integration-mocharc.json",
    "prepareRelease": "npm prune --production"
  },
  "dependencies": {
    "@sap/xssec": "^2.2.3",
    "@sap/xsenv": "^2.2.0",
    "debug": "^4.1.1",
    "jwt-simple": "^0.5.6",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.8"
  },
  "devDependencies": {
    "mocha": "^6.2.2",
    "nock": "^11.7.0",
    "nyc": "^14.1.1",
    "proxyquire": "^2.1.3",
    "cross-env": "^7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SAP/leonardo-iot-sdk-nodejs"
  },
  "keywords": [
    "SAP",
    "Leonardo",
    "IoT",
    "SDK"
  ],
  "author": "SAP SE",
  "license": "Apache-2.0",
  "files": [
    "NOTICE.md",
    "LICENSE",
    "README.md",
    "index.js",
    "lib/"
  ]
}
